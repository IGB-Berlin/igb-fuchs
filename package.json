{
  "name": "igb-fuchs",
  "displayName": "IGB-FUCHS",
  "version": "0.3.0-beta",
  "description": "IGB-FUCHS is an Electronic Lab Notebook with a focus on fieldwork, developed at IGB Berlin.",
  "author": {
    "name": "Hauke DÃ¤mpfling at the IGB Berlin",
    "email": "haukex@zero-g.net"
  },
  "license": "GPL-3.0-or-later",
  "browserslist": "defaults",
  "type": "module",
  "_comment": "NOTE naming the test script `test` apparently always causes the VSCode test runner to use that",
  "scripts": {
    "clean": "git clean -dxf -e node_modules -e dev/py/.venv -e dev/issue-bak/.venv",
    "lint": "cd src && tsc --noEmit && cd ../worker && tsc --noEmit && cd .. && eslint && jsonschema lint --strict src/types/igb-fuchs.schema.json && bash dev/shellcheck.sh",
    "start": "npm run clean && parcel --target prod --port 1234",
    "build": "npm run clean && parcel build --target prod && cp -v src/types/igb-fuchs.schema.json dist-prod/",
    "dist-test": "npm run lint && npm run build && cross-env WEB_SERVER_PATH=dist-prod playwright test",
    "coverage": "bash dev/coverage.sh",
    "full-test": "npm run dist-test && bash dev/coverage.sh"
  },
  "targets": {
    "prod": {
      "source": "src/index.html",
      "distDir": "dist-prod"
    },
    "test": {
      "distDir": "dist-test",
      "optimize": false,
      "sourceMap": {
        "inline": true,
        "inlineSources": true
      }
    }
  },
  "@parcel/transformer-js": {
    "inlineEnvironment": [
      "CUSTOM_DEV_VERSION",
      "npm_package_version"
    ]
  },
  "devDependencies": {
    "@eslint/js": ">=9.38.0 <9.39.0 || >9.39.0",
    "@parcel/packager-raw-url": "^2.16.1",
    "@parcel/transformer-inline-string": "^2.16.1",
    "@parcel/transformer-sass": "^2.16.1",
    "@parcel/transformer-typescript-tsc": "^2.16.1",
    "@parcel/transformer-webmanifest": "^2.16.1",
    "@playwright/test": "^1.57.0",
    "@sourcemeta/jsonschema": "^12.8.0",
    "@stylistic/eslint-plugin": "^5.6.1",
    "@types/bootstrap": "^5.2.10",
    "@types/node": "^24.10.1",
    "@types/papaparse": "^5.5.1",
    "@types/w3c-web-serial": "^1.0.8",
    "@types/webpack-env": "^1.18.8",
    "@zip.js/zip.js": "^2.8.11",
    "cross-env": "^10.1.0",
    "eslint": "^9.39.1",
    "nyc": "^17.1.0",
    "parcel": "^2.16.1",
    "playwright-test-coverage": "^1.2.12",
    "serve": "^14.2.5",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.48.1"
  },
  "dependencies": {
    "@cfworker/json-schema": "^4.1.1",
    "@parcel/service-worker": "^2.16.1",
    "@popperjs/core": "^2.11.8",
    "bootstrap": "^5.3.8",
    "bootstrap-icons": "^1.13.1",
    "i18n-js": "^4.5.1",
    "idb": "^8.0.3",
    "papaparse": "^5.5.3"
  }
}
