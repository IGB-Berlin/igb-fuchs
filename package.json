{
  "name": "igb-fuchs",
  "displayName": "IGB-FUCHS",
  "version": "0.1.0-beta",
  "description": "IGB-FUCHS is an Electronic Lab Notebook with a focus on fieldwork, developed at IGB Berlin.",
  "author": {
    "name": "Hauke DÃ¤mpfling at the IGB Berlin",
    "email": "haukex@zero-g.net"
  },
  "license": "GPL-3.0-or-later",
  "source": "src/index.html",
  "browserslist": "defaults",
  "type": "module",
  "_comment": "NOTE naming the test script `test` apparently always causes the VSCode test runner to use that",
  "scripts": {
    "dist-clean": "git clean -dxf",
    "clean": "git clean -dxf -e node_modules -e dev/py/.venv -e dev/issue-bak/.venv",
    "start": "npm run clean && parcel --port 1234",
    "build": "npm run clean && npm run lint && npm run just-build",
    "just-build": "rm -rf dist && parcel build && cp -v src/types/igb-fuchs.schema.json dist/",
    "lint": "cd src && tsc --noEmit && cd ../worker && tsc --noEmit && cd .. && eslint && jsonschema lint --strict src/types/igb-fuchs.schema.json",
    "all-test": "npm run build && jest && playwright test"
  },
  "@parcel/transformer-js": {
    "inlineEnvironment": [
      "CUSTOM_DEV_VERSION",
      "npm_package_version"
    ]
  },
  "devDependencies": {
    "@eslint/js": "^9.38.0",
    "@jest/globals": "^30.2.0",
    "@parcel/packager-raw-url": "^2.16.0",
    "@parcel/transformer-inline-string": "^2.16.0",
    "@parcel/transformer-sass": "^2.16.0",
    "@parcel/transformer-typescript-tsc": "^2.16.0",
    "@parcel/transformer-webmanifest": "^2.16.0",
    "@playwright/test": "^1.56.1",
    "@sourcemeta/jsonschema": "^12.0.0",
    "@stylistic/eslint-plugin": "^5.5.0",
    "@types/bootstrap": "^5.2.10",
    "@types/node": "^22.18.12",
    "@types/papaparse": "^5.3.16",
    "@types/webpack-env": "^1.18.8",
    "@zip.js/zip.js": "^2.8.8",
    "eslint": "^9.38.0",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "parcel": "^2.16.0",
    "serve": "^14.2.5",
    "ts-jest": "^29.4.5",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.2"
  },
  "dependencies": {
    "@cfworker/json-schema": "^4.1.1",
    "@parcel/service-worker": "^2.16.0",
    "@popperjs/core": "^2.11.8",
    "bootstrap": "^5.3.8",
    "bootstrap-icons": "^1.13.1",
    "i18n-js": "^4.5.1",
    "idb": "^8.0.3",
    "papaparse": "^5.5.3"
  }
}
